<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:visibility="visible"
    tools:context=".MainActivity"
    android:background="@drawable/background1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/add_quantities"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="55dp"
        android:layout_marginTop="-98dp"
        android:gravity="center_horizontal"
        android:text="Quantity Measurement"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/convert_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="414dp"
        android:text="CONVERT QUANTITY"
        android:textColor="@color/white"
        android:textSize="10dp" />

    <Button
        android:id="@+id/add_quantities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/convert_quantity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="207dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="414dp"
        android:text="ADD QUANTITIES"
        android:textColor="@color/white"
        android:textSize="10dp" />

    <Spinner
        android:id="@+id/units"
        android:layout_width="239dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="103dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="100dp"
        android:layout_marginBottom="320dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:minHeight="48dp" />


    <EditText
        android:id="@+id/quantity_to_convert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/units"
        android:layout_alignParentStart="true"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="-75dp"
        android:ems="7"
        android:gravity="center"
        android:hint="Quantity"
        android:inputType="numberDecimal"
        android:minHeight="48dp"
        android:textColor="@color/black" />

    <Spinner
        android:id="@+id/convert_from"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/quantity_to_convert"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />


    <Spinner
        android:id="@+id/convert_to"
        android:layout_width="140dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/quantity_to_convert"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:textColor="@color/white"
        android:textColorHint="@color/white" />

    <TextView
        android:id="@+id/quantity_converted"
        android:layout_width="145dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="254dp"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="12dp"
        android:layout_marginBottom="249dp"
        android:height="48dp"
        android:ems="10"
        android:gravity="center"
        android:text="output"
        android:textSize="18sp" />

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="261dp"
        app:srcCompat="@drawable/ic_action_name" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="1dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="258dp"
        android:outlineAmbientShadowColor="@color/black"
        app:srcCompat="@android:drawable/bottom_bar" />


</RelativeLayout>
