<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="SecondActivity"
    android:background="@drawable/background1">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/add_quantities"
        android:layout_alignParentStart="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="-90dp"
        android:gravity="center_horizontal"
        android:text="Quantity Measurement"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="italic" />

    <Button
        android:id="@+id/convert_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="414dp"
        android:text="CONVERT QUANTITY"
        android:textColor="@color/white"
        android:textSize="10dp" />

    <Button
        android:id="@+id/add_quantities"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/convert_quantity"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="207dp"
        android:layout_marginLeft="10dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="414dp"
        android:text="ADD QUANTITIES"
        android:textColor="@color/white"
        android:textSize="10dp" />


    <Spinner
        android:id="@+id/units"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="200dp"
        android:layout_marginBottom="318dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:gravity="center"
        android:minHeight="48dp"
        android:textColor="@color/white" />

    <EditText
        android:id="@+id/quantity1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/convert_quantity"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-230dp"
        android:gravity="center"
        android:hint="Quantity1"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textSize="23sp" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_alignBottom="@id/quantity1"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:textColor="@color/white" />


    <EditText
        android:id="@+id/quantity2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/quantity1"
        android:layout_alignBottom="@id/convert_quantity"
        android:layout_centerInParent="true"
        android:layout_marginRight="-135dp"
        android:layout_marginBottom="-230dp"
        android:gravity="center"
        android:hint="Quantity2"
        android:inputType="numberDecimal"
        android:textColor="@color/black"
        android:textSize="23sp" />


    <Spinner
        android:id="@+id/spinner2"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_alignRight="@id/quantity1"
        android:layout_alignBottom="@id/quantity2"
        android:layout_centerHorizontal="true"
        android:layout_marginRight="-139dp"
        android:layout_marginBottom="-89dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:textColor="@color/white" />

    <Spinner
        android:id="@+id/spinner3"
        android:layout_width="110dp"
        android:layout_height="48dp"
        android:layout_alignRight="@id/quantity1"
        android:layout_alignBottom="@id/quantity2"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="20dp"
        android:layout_marginRight="-278dp"
        android:layout_marginBottom="-90dp"
        android:background="@drawable/borders_spinners"
        android:contentDescription="@string/app_name"
        android:textColor="@color/white" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="121dp"
        android:layout_marginBottom="195dp"
        app:srcCompat="@android:drawable/ic_input_add" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="110dp"
        android:layout_marginBottom="198dp"
        app:srcCompat="@drawable/ic_action_name" />

    <TextView
        android:id="@+id/result"
        android:layout_width="72dp"
        android:layout_height="37dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="192dp"
        android:autoSizeMaxTextSize="100sp"
        android:autoSizeMinTextSize="15sp"
        android:autoSizeStepGranularity="2sp"
        android:autoSizeTextType="uniform"
        android:gravity="center"
        android:text="Result"
        android:textAlignment="center"
        android:textSize="23sp" />


</RelativeLayout>